<!-- <.% %.> without the dot its know as scriptlet tag and its use to 
    add control flow js code in ejs file. its formula is to use it on every none html line-->


<%- include('header') -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">


        <%for(var i=0; i < newItems.length; i++){%>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= newItems[i] %>
                </p>
            </div>



            <%}%>

                <form action="/" method="post" class="item">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value=<%=listTitle %> >+</button>
                </form>


    </div>

    <%- include('footer') -%>